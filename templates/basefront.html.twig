<script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>

<script>
    // Bulletproof Cookie Function
    function setGoogleCookie(lang) {
        // Set the cookie for the whole domain
        document.cookie = `googtrans=/fr/${lang}; path=/; domain=${window.location.hostname}`;
        document.cookie = `googtrans=/fr/${lang}; path=/`; // Set for local paths too
    }

    // Read the current language from the cookie on page load
    function getGoogleCookie() {
        const match = document.cookie.match(/googtrans=\/fr\/([a-z]{2})/);
        return match ? match[1] : 'fr';
    }

    document.addEventListener('DOMContentLoaded', function() {
        const langButtons = document.querySelectorAll('.lang-btn');
        const currentLang = getGoogleCookie();

        // 1. Set the correct button to "Active" and apply RTL on page load
        langButtons.forEach(btn => {
            btn.classList.remove('active');
            if (btn.getAttribute('data-lang') === currentLang) {
                btn.classList.add('active');
            }
        });

        if (currentLang === 'ar') {
            document.documentElement.setAttribute('dir', 'rtl');
            document.documentElement.setAttribute('lang', 'ar');
        } else {
            document.documentElement.setAttribute('dir', 'ltr');
            document.documentElement.setAttribute('lang', currentLang);
        }

        // 2. Handle Button Clicks
        langButtons.forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                const selectedLang = this.getAttribute('data-lang');
                
                if (selectedLang === currentLang) return; // Do nothing if already selected

                // Set the cookie and reload for a perfectly clean translation
                setGoogleCookie(selectedLang);
                window.location.reload(); 
            });
        });
    });
</script>
