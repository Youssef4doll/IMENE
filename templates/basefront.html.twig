        @keyframes logoGlow { 0% { box-shadow: 0 0 10px rgba(255,45,45,0.3); } 100% { box-shadow: 0 0 20px rgba(255,45,45,0.6); } }

        nav { display: flex; align-items: center; gap: 4px; }
